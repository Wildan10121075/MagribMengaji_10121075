<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/hijau"
        app:cardElevation="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/txt_app_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Judul_Appbar"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/putih_bone"
            android:layout_marginTop="12dp"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/coolvetica_rg"
            app:layout_constraintStart_toEndOf="@+id/img_app_bar"
            app:layout_constraintBottom_toBottomOf="@+id/img_app_bar"
            app:layout_constraintTop_toTopOf="@+id/img_app_bar"
            />
        <ImageView
            android:id="@+id/img_app_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_splash"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="@+id/app_bar"
            app:layout_constraintEnd_toStartOf="@id/txt_app_bar"
            app:layout_constraintBottom_toBottomOf="@id/app_bar"
            app:layout_constraintTop_toTopOf="@id/app_bar"
            />

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav"
        android:background="@color/hijau"

        app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"/>
</androidx.constraintlayout.widget.ConstraintLayout>
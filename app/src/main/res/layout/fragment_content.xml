<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContentFragment">
    <TextView
        android:id="@+id/txt_judul_content_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Judul_Fragment_Content"
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:fontFamily="@font/coolvetica_rg"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:cardBackgroundColor="@color/putih_bone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_konten_edukasi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_card_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/coolvetica_rg"
            android:layout_marginStart="60dp"
            android:layout_marginTop="22dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_konten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="60dp"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>
